<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context=".MainActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    tools:ignore="FragmentTagUsage,MissingClass">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:inputType="textPersonName"
            android:hint="Search Location"
            android:textSize="4mm"
            android:textColorHint="#77FFFFFF"
            android:textColor="#ffffff"
            android:textColorHighlight="#ffFFFFFF"
            android:textColorLink="#77FFFFFF"
            tools:ignore="Autofill,HardcodedText,InOrMmUsage,RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:onClick="searchLocation"
            android:src="@android:drawable/ic_menu_search"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded,UsingOnClickInXml" />

    </LinearLayout>
</fragment>